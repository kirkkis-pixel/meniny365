---
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  structuredData?: any;
}

const { title, description, canonical, structuredData } = Astro.props;
---

<!DOCTYPE html>
<html lang="sk">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonical || 'https://meniny365.sk'} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical || 'https://meniny365.sk'} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://meniny365.sk/og-image.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical || 'https://meniny365.sk'} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://meniny365.sk/og-image.jpg" />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Inter font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- Structured Data -->
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-gray-50 via-white to-blue-50 min-h-screen">
    <!-- Clean Navigation Header -->
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-sm border-b border-gray-200/50">
      <div class="container">
        <nav class="flex items-center justify-between py-4">
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/sk" class="text-2xl font-bold text-black">meniny365</a>
          </div>
          
          <!-- Navigation Links -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/sk" class="text-gray-600 hover:text-black transition-colors">Domov</a>
            <a href="/sk/kalendár" class="text-gray-600 hover:text-black transition-colors">Kalendár</a>
            <a href="/sk/populárne-mená" class="text-gray-600 hover:text-black transition-colors">Populárne mená</a>
            <a href="/sk/návrhy-mena" class="text-gray-600 hover:text-black transition-colors">Návrhy mien</a>
            <a href="/sk/blog" class="text-gray-600 hover:text-black transition-colors">Blog</a>
          </div>
          
          <!-- Right Side -->
          <div class="flex items-center space-x-4">
            <!-- Theme Toggle -->
            <button class="p-2 text-gray-600 hover:text-black transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </button>
            
            <!-- Sign In -->
            <a href="/sk/návrhy-mena" class="text-gray-600 hover:text-black transition-colors font-medium">
              Prihlásiť sa
            </a>
            
            <!-- Sign Up -->
            <a href="/sk/kalendár" class="bg-black text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-800 transition-colors">
              Začať
            </a>
          </div>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="mt-32 bg-gradient-to-b from-transparent to-[var(--bg-secondary)] border-t border-[var(--border-light)]">
      <div class="container py-16">
        <div class="text-center">
          <div class="ai-badge mx-auto mb-6">
            <span>🤖</span>
            <span>AI-Powered</span>
          </div>
          <h3 class="text-title mb-4">meniny365.sk</h3>
          <p class="text-body mb-8 max-w-2xl mx-auto">
            Prvý AI-powered kalendár menín na Slovensku. 
            Inteligentné vyhľadávanie, návrhy darčekov a personalizované skúsenosti.
          </p>
          <div class="flex flex-col md:flex-row items-center justify-center gap-6 text-caption">
            <a href="/sk/kalendár" class="hover:text-brand transition-colors">Kalendár</a>
            <a href="/sk/populárne-mená" class="hover:text-brand transition-colors">Populárne mená</a>
            <a href="/sk/návrhy-mena" class="hover:text-brand transition-colors">Návrhy mien</a>
            <a href="/sk/blog" class="hover:text-brand transition-colors">Blog</a>
          </div>
          <div class="mt-8 pt-8 border-t border-[var(--border-light)] text-caption">
            <p>&copy; 2025 meniny365.sk - Všetky práva vyhradené</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>