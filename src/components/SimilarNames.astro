---
import { getSimilarNamesWithContext } from '../lib/similar';
import { toSlug } from '../lib/slug';
import meninyData from '../data/meniny-sk/meniny-2025-simple.json';

export interface Props {
  name: string;
}

const { name } = Astro.props;

// Get all unique names from the dataset
const allNames = new Set<string>();
Object.values(meninyData).forEach((names: string[]) => {
  names.forEach(n => allNames.add(n));
});

const similarNames = getSimilarNamesWithContext(name, Array.from(allNames), 8);
---

<div class="similar-names bg-gradient-to-br from-slate-50 to-indigo-50 rounded-2xl p-6 border border-slate-200/50">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
    </div>
    
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-slate-800 mb-3">Podobné mená</h3>
      
      {similarNames.length > 0 ? (
        <div>
          <p class="text-slate-600 text-sm mb-4">
            Mená podobné k <span class="font-medium text-slate-800">{name}</span>:
          </p>
          
          <div class="flex flex-wrap gap-2">
            {similarNames.map(similar => (
              <a 
                href={`/sk/meno/${toSlug(similar.name)}`}
                class="inline-flex items-center px-3 py-2 bg-white text-slate-700 rounded-lg border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50 transition-all duration-200 text-sm font-medium group"
                title={similar.reason}
              >
                <span class="group-hover:text-indigo-600 transition-colors">
                  {similar.name}
                </span>
                <svg class="w-3 h-3 ml-1 text-slate-400 group-hover:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            ))}
          </div>
          
          <div class="mt-4 text-xs text-slate-500">
            Kliknite na meno pre viac informácií
          </div>
        </div>
      ) : (
        <div>
          <p class="text-slate-600 text-sm mb-4">
            Pre meno <span class="font-medium text-slate-800">{name}</span> sme nenašli podobné mená.
          </p>
          
          <div class="bg-slate-100 rounded-lg p-3">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm text-slate-600">
                Skúste vyhľadať iné mená v našom kalendári
              </span>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</div>
