---
export interface Props {
  href?: string;
  interactive?: boolean;
  padding?: "sm" | "md";
  class?: string;
}

const { href, interactive = false, padding = "md", class: className = "" } = Astro.props;

const paddingClass = padding === "sm" ? "p-4" : "p-6";
const interactiveClass = interactive ? "hover:shadow-lg hover:scale-[1.02] transition-all duration-200" : "";
const linkClass = href ? "block" : "";

const baseClasses = `bg-white rounded-2xl border border-slate-200/50 shadow-sm ${paddingClass} ${interactiveClass} ${linkClass} ${className}`;
---

{href ? (
  <a href={href} class={baseClasses}>
    <slot />
  </a>
) : (
  <div class={baseClasses}>
    <slot />
  </div>
)}
