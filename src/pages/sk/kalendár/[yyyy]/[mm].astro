---
import Layout from '../../../../layouts/Layout.astro';
import { generateCalendarPageSEO } from '../../../../lib/seo.ts';
import { readFile } from 'fs/promises';
import { join } from 'path';

export async function getStaticPaths() {
  const currentYear = new Date().getFullYear();
  const paths = [];
  
  // Generate paths for current year and next year
  for (let year = currentYear; year <= currentYear + 1; year++) {
    for (let month = 1; month <= 12; month++) {
      paths.push({
        params: {
          yyyy: year.toString(),
          mm: month.toString().padStart(2, '0')
        }
      });
    }
  }
  
  return paths;
}

const { yyyy, mm } = Astro.params;
const year = parseInt(yyyy!);
const month = parseInt(mm!);

// Read calendar data
const calendarData = await readFile(join(process.cwd(), 'src/data/meniny-sk/meniny-2025-simple.json'), 'utf-8');
const calendar = JSON.parse(calendarData);

// Filter names for this month
const monthNames = [
  "januára", "februára", "marca", "apríla", "mája", "júna",
  "júla", "augusta", "septembra", "októbra", "novembra", "decembra"
];

const monthName = monthNames[month - 1];
const monthNamesInCalendar = calendar.filter((entry: any) => {
  const entryMonth = parseInt(entry.date.split('-')[1]);
  return entryMonth === month;
});

// Generate SEO data
const seoData = generateCalendarPageSEO(mm!, yyyy!);
---

<Layout 
  title={seoData.title}
  description={seoData.description}
  canonical={seoData.canonical}
  keywords={seoData.keywords}
  structuredData={seoData.structuredData}
>
  <div class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
          Meniny v {monthName} {year}
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Kompletný kalendár menín pre {monthName} {year}. Pozrite si všetky meniny, 
          pôvod mien a nájdite perfektný darček k meninám.
        </p>
      </div>

      <!-- Calendar Grid -->
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {monthNamesInCalendar.map((entry: any) => {
            const day = entry.date.split('-')[2];
            const names = entry.names;
            
            return (
              <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg transition-all duration-300">
                <div class="flex items-center justify-between mb-4">
                  <div class="text-3xl font-bold text-slate-900">{day}</div>
                  <div class="text-sm text-slate-500">{monthName}</div>
                </div>
                
                <div class="space-y-2">
                  {names.map((name: string) => (
                    <a 
                      href={`/sk/meno/${name.toLowerCase().replace(/\s+/g, '-')}`}
                      class="block text-lg font-semibold text-blue-600 hover:text-blue-800 transition-colors"
                    >
                      {name}
                    </a>
                  ))}
                </div>
                
                <div class="mt-4 pt-4 border-t border-slate-100">
                  <a 
                    href={`/sk/den/${year}/${mm}/${day}`}
                    class="text-sm text-slate-500 hover:text-slate-700 transition-colors"
                  >
                    Pozrieť detaily →
                  </a>
                </div>
              </div>
            );
          })}
        </div>

        <!-- CTA Section -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-8 text-center">
          <h2 class="text-2xl font-bold text-slate-900 mb-4">
            Nájdite darček k meninám
          </h2>
          <p class="text-slate-600 mb-6">
            Použite naše AI-powered nástroje na nájdenie perfektného darčeka alebo pohľadnice.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/sk/darceky" 
              class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
              AI Darčeky
            </a>
            <a 
              href="/sk/pohladnice" 
              class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold border border-blue-200 hover:bg-blue-50 transition-colors"
            >
              E-pohľadnice
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>