---
import Layout from '../../../../../layouts/Layout.astro';
import { readFile } from 'fs/promises';
import { join } from 'path';

export async function getStaticPaths() {
  const currentYear = new Date().getFullYear();
  const paths = [];
  
  // Generate paths for current year and next year
  for (let year = currentYear; year <= currentYear + 1; year++) {
    for (let month = 1; month <= 12; month++) {
      const daysInMonth = new Date(year, month, 0).getDate();
      for (let day = 1; day <= daysInMonth; day++) {
        paths.push({
          params: {
            yyyy: year.toString(),
            mm: month.toString().padStart(2, '0'),
            dd: day.toString().padStart(2, '0')
          }
        });
      }
    }
  }
  
  return paths;
}

const { yyyy, mm, dd } = Astro.params;
const year = parseInt(yyyy!);
const month = parseInt(mm!);
const day = parseInt(dd!);

// Read calendar data
const calendarData = await readFile(join(process.cwd(), 'src/data/meniny-sk/meniny-2025-simple.json'), 'utf-8');
const calendar = JSON.parse(calendarData);

// Find names for this date
const dateStr = `${year}-${mm}-${dd}`;
const dayEntry = calendar.find((entry: any) => entry.date === dateStr);
const names = dayEntry ? dayEntry.names : [];

// Month names
const monthNames = [
  "januára", "februára", "marca", "apríla", "mája", "júna",
  "júla", "augusta", "septembra", "októbra", "novembra", "decembra"
];

const monthName = monthNames[month - 1];
const namesList = names.join(', ');

// Generate SEO data
const title = `Meniny ${day}. ${monthName} ${year} - ${namesList} | meniny365.sk`;
const description = `Dnes ${day}. ${monthName} ${year} majú meniny: ${namesList}. Pozrite si pôvod mien, darčeky a pohľadnice k meninám.`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": `Meniny ${day}. ${monthName} ${year}`,
  "description": description,
  "startDate": dateStr,
  "location": {
    "@type": "Country",
    "name": "Slovakia"
  },
  "organizer": {
    "@type": "Organization",
    "name": "meniny365.sk"
  }
};
---

<Layout 
  title={title}
  description={description}
  canonical={`https://meniny365.sk/sk/den/${year}/${mm}/${dd}`}
  keywords={`meniny ${day}. ${monthName}, ${namesList}, darčeky k meninám, pohľadnice`}
  structuredData={structuredData}
>
  <div class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-16">
        <div class="text-6xl font-bold text-slate-900 mb-4">{day}</div>
        <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          {monthName} {year}
        </h1>
        <p class="text-xl text-slate-600">
          Dnes majú meniny: <span class="font-semibold text-blue-600">{namesList}</span>
        </p>
      </div>

      {names.length > 0 ? (
        <div class="max-w-4xl mx-auto">
          <!-- Names Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            {names.map((name: string) => (
              <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg transition-all duration-300">
                <h3 class="text-xl font-bold text-slate-900 mb-4">{name}</h3>
                <div class="space-y-3">
                  <a 
                    href={`/sk/meno/${name.toLowerCase().replace(/\s+/g, '-')}`}
                    class="block w-full bg-blue-600 text-white text-center py-2 px-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                  >
                    Pôvod mena
                  </a>
                  <a 
                    href={`/sk/darceky?name=${encodeURIComponent(name)}`}
                    class="block w-full bg-slate-100 text-slate-700 text-center py-2 px-4 rounded-lg font-semibold hover:bg-slate-200 transition-colors"
                  >
                    Darčeky
                  </a>
                  <a 
                    href={`/sk/pohladnice?name=${encodeURIComponent(name)}`}
                    class="block w-full bg-slate-100 text-slate-700 text-center py-2 px-4 rounded-lg font-semibold hover:bg-slate-200 transition-colors"
                  >
                    Pohľadnice
                  </a>
                </div>
              </div>
            ))}
          </div>

          <!-- CTA Section -->
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-8 text-center">
            <h2 class="text-2xl font-bold text-slate-900 mb-4">
              Gratulujte k meninám
            </h2>
            <p class="text-slate-600 mb-6">
              Pošlite krásnu pohľadnicu alebo nájdite perfektný darček pre {namesList}.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                href="/sk/pohladnice" 
                class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
              >
                Vytvoriť pohľadnicu
              </a>
              <a 
                href="/sk/darceky" 
                class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold border border-blue-200 hover:bg-blue-50 transition-colors"
              >
                Nájsť darček
              </a>
            </div>
          </div>
        </div>
      ) : (
        <div class="max-w-2xl mx-auto text-center">
          <div class="bg-slate-100 rounded-2xl p-12">
            <div class="text-6xl mb-4">📅</div>
            <h2 class="text-2xl font-bold text-slate-900 mb-4">
              Žiadne meniny
            </h2>
            <p class="text-slate-600 mb-6">
              Dnes {day}. {monthName} {year} nemajú žiadne meniny v slovenskom kalendári.
            </p>
            <a 
              href="/sk/kalendár/${year}/${mm}"
              class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
              Pozrieť celý mesiac
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>