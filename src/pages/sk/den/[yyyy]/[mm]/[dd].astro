  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": names.map((name, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": name,
      "url": `https://meniny365.sk/sk/meno/${toSlug(name)}`
    }))
  }
};
